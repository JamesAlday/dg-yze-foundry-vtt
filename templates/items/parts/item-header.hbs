<header class="sheet-header flexcol flex-center">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>

    <div class="flexrow flex-center">
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'T2KLANG.itemSheet.name'}}"/></h1>

        <div class="item-subtitle">
            <h4>{{itemType}}</h4>
        </div>
    </div>

</header>