<div class="components-list">

  <div class="flexrow">
    <div>
      <h3>{{localize "T2K4E.VehicleSheet.innerComponents"}}</h3>
    </div>
    <div>
      <h3>{{localize "T2K4E.VehicleSheet.outerComponents"}}</h3>
    </div>
  </div>

  <div class="flexrow">

    {{!-- ================================================== --}}
    {{!--  Inner Components                                  --}}
    {{!-- ================================================== --}}

    <div class="inner-components">

      {{!-- ================================================== --}}

      {{!-- FUEL --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.fuel.active" {{checked data.components.fuel.active}}/>
          {{localize "T2K4E.VehicleSheet.components.fuel"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.fuel.damage" value={{data.components.fuel.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- ENGINE --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.engine.active" {{checked data.components.engine.active}}/>
          {{localize "T2K4E.VehicleSheet.components.engine"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.engine.damage" value={{data.components.engine.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- SUSPENSION --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.suspension.active" {{checked data.components.suspension.active}}/>
          {{localize "T2K4E.VehicleSheet.components.suspension"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.suspension.damage" value={{data.components.suspension.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- AMMUNITION --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.ammunition.active" {{checked data.components.ammunition.active}}/>
          {{localize "T2K4E.VehicleSheet.components.ammunition"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.ammunition.damage" value={{data.components.ammunition.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- RADIO --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.radio.active" {{checked data.components.radio.active}}/>
          {{localize "T2K4E.VehicleSheet.components.radio"}}
        </label>
        <div class="radio-reliability flexrow">
          <input type="number" class="boxed-value" name="data.components.radio.reliability.value" value={{data.components.radio.reliability.value}} data-dtype="Number"/>
          <span class="sep">/</span>
          <input type="number" class="boxed-value" name="data.components.radio.reliability.max" value={{data.components.radio.reliability.max}} data-dtype="Number"/>
        </div>
      </div>
    </div>

    {{!-- ================================================== --}}
    {{!--  Outer Components                                  --}}
    {{!-- ================================================== --}}

    <div class="outer-components">

      {{!-- ================================================== --}}

      {{!-- TRACK/WHEEL --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.trackWheel.active" {{checked data.components.trackWheel.active}}/>
          {{localize "T2K4E.VehicleSheet.components.trackWheel"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.trackWheel.damage" value={{data.components.trackWheel.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- FIRE CONTROL SYSTEM --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.fcs.active" {{checked data.components.fcs.active}}/>
          {{localize "T2K4E.VehicleSheet.components.fcs"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.fcs.damage" value={{data.components.fcs.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <div class="fcs-type">
        <input type="text" name="data.components.fcs.type" value="{{data.components.fcs.type}}" placeholder="{{localize "T2K4E.VehicleSheet.fcsType"}}" title="{{localize "T2K4E.VehicleSheet.fcsType"}}"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- ANTENNA --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.components.antenna.active" {{checked data.components.antenna.active}}/>
          {{localize "T2K4E.VehicleSheet.components.antenna"}}
        </label>
        <input type="number" class="boxed-value" name="data.components.antenna.damage" value={{data.components.antenna.damage}} title="{{localize "T2K4E.VehicleSheet.componentDamage"}}" data-dtype="Number"/>
      </div>

      <hr/>

      {{!-- ================================================== --}}

      {{!-- TRAILER --}}
      <div class="form-group">
        <label class="checkbox">
          <input type="checkbox" name="data.trailer" {{checked data.trailer}}/>
          {{localize "T2K4E.VehicleSheet.hasTrailer"}}
        </label>
      </div>

      {{!-- ================================================== --}}

    </div>

  </div>

</div>