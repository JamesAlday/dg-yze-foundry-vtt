<div class="item item-armor flexrow" data-item-id={{armor._id}} draggable="true">

    <div class="item-name flexrow">
        <img class="item-roll" src="{{armor.img}}" title="{{armor.name}}" width="24" height="24"/>
        <a class="item-roll">{{armor.name}}</a>
    </div>
    <div class="item-detail item-cover">
        {{#each armor.data.location as | bool name |}}
        {{#if bool}}
        {{{lookup @root.config.armorLocationIcons name}}}
        {{/if}}
        {{/each}}
    </div>
    <div class="item-detail item-rating">{{armor.data.rating.value}}/{{armor.data.rating.max}}</div>
    <div class="item-detail item-weight" title="{{localize "T2KLANG.ItemSheet.Quantity"}}: {{armor.data.qty}}">{{armor.data.encumbrance}}</div>

    <div class="item-controls">
        {{> "systems/t2k4e/templates/actors/parts/slots/slot-buttons.hbs"}}
    </div>

</div>