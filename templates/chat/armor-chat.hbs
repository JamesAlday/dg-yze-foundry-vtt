<div class="t2k4e chat-card armor" data-item-id="{{_id}}" data-owner-id="{{owner}}">
    <div class="card-content">

        <div class="card-name">
            <h2>{{name}}</h2>
        </div>

        <div class="card-image">
            <img src="{{img}}" alt="{{name}}"/>
        </div>

        <div class="card-description">
            {{{data.description}}}
            <h4>{{localize "T2KLANG.ItemSheet.FeaturesTab"}}</h4>
            <div class="grid grid-3col">
                <div><b>{{localize "T2KLANG.ItemSheet.Armor"}}:</b> <code>{{data.rating.max}}</code></div>
            </div>
        </div>

        {{!-- <div class="card-buttons">
            <button class="weapon-attack"><i class="fas fa-crosshairs"></i> {{localize "T2KLANG.Chat.Actions.Attack"}}</button>
            {{#if data.mag.max}}
            <button class="weapon-reload"><i class="fas fa-sync-alt"></i> {{localize "T2KLANG.Chat.Actions.Reload"}}</button>
            {{/if}}
        </div> --}}

    </div>
</div>