<form class="t2k4e dialog roll-dialog">

    <div class="form-group">
        <label>{{localize "T2K4E.Dialog.Roll.Modifier"}}</label>
        <input type="number" name="modifier" value="0"/>
    </div>

    {{#if specialties}}
    <label>{{localize "T2K4E.ActorSheet.Specialties"}}</label>
    <div class="form-group-stacked">
        {{#each specialties as | specialty |}}
        <label class="checkbox">
            <input type="checkbox" name="specialty-{{@index}}" value="{{specialty.value}}"/>
            {{specialty.name}}
        </label>
        {{/each}}
    </div>
    {{/if}}

    {{#if weapon}}
    {{#if weapon.data.rof}}
    <div class="form-group">
        <label>{{localize "T2K4E.Dialog.Roll.RoF"}} <small><i>(min 1, max {{weapon.data.rof}})</i></small></label>
        <input type="number" name="rof" value="1" min="1" max="{{weapon.data.rof}}"/>
    </div>
    {{/if}}
    {{/if}}

</form>