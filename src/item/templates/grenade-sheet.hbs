<form class="{{cssClass}} flexcol" autocomplete="off">

  {{!-- Item Sheet Header --}}
  {{> "systems/dgyze/templates/item/parts/item-header.hbs"}}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs slanted-tabs flexrow" data-group="primary">
    <a class="item" data-tab="features">{{localize "DGYZE.ItemSheet.FeaturesTab"}}</a>
    <a class="item" data-tab="description">{{localize "DGYZE.ItemSheet.DescriptionTab"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Features Tab --}}
    <div class="tab tab-features" data-group="primary" data-tab="features">
      <div class="grid grid-4col item-features">
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.ItemType"}}</label>
          <input type="text" name="system.itemType" value="{{system.itemType}}"/>
        </div>
        {{!-- <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Ammo"}}</label>
          <input type="text" name="system.ammo" value="{{system.ammo}}"/>
        </div> --}}
        {{!-- <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Reliability"}}</label>
          <div class="flexrow">
            {{> scoreSelector name="system.reliability.score" selected=system.reliability.score}}
            <span class="sep">/</span>
            {{> scoreSelector name="system.reliability.max" selected=system.reliability.max}}
          </div>
        </div> --}}
        {{!-- <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.RoF"}}</label>
          <input type="text" name="system.rof" value="{{system.rof}}" data-dtype="Number"/>
        </div> --}}
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Damage"}}</label>
          <input type="text" name="system.damage" value="{{system.damage}}" data-dtype="Number"/>
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Crit"}}</label>
          <input type="text" name="system.crit" value="{{system.crit}}" data-dtype="Number"/>
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Blast"}}</label>
          {{> scoreSelector name="system.blast" selected=system.blast}}
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Range"}}</label>
          <input type="text" name="system.range" value="{{system.range}}" data-dtype="Number"/>
        </div>
        {{!-- <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Mag"}}</label>
          <div class="flexrow">
            <input type="text" name="system.mag.value" value="{{system.mag.value}}" data-dtype="Number"/>
            <span class="sep">/</span>
            <input type="text" name="system.mag.max" value="{{system.mag.max}}" data-dtype="Number"/>
          </div>
        </div> --}}
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Armor"}}</label>
          <input type="text" name="system.armorModifier" value="{{numberFormat system.armorModifier sign=true}}" data-dtype="Number"/>
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Weight"}}</label>
          <input type="text" name="system.weight" value="{{numberFormat system.weight decimals=2}}" data-dtype="Number"/>
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.ItemSheet.Expense"}}</label>
          {{!-- Expense Category --}}
          {{> "systems/dgyze/templates/item/parts/item-expense.hbs"}}
        </div>
      </div>

      {{!-- Other Parameters --}}
      <div class="features-other flexcol">

        {{!-- Used Attribute --}}
        <div class="form-group">
          <label>{{localize "DGYZE.ItemSheet.AttributeUsed"}}</label>
          <select name="system.attribute">
            {{selectOptions config.attributes selected=system.attribute localize=true}}
          </select>
        </div>

        {{!-- Used Skill --}}
        <div class="form-group">
          <label>{{localize "DGYZE.ItemSheet.SkillUsed"}}</label>
          <select name="system.skill">
            {{selectOptions config.skills selected=system.skill localize=true}}
          </select>
        </div>

        {{!-- Properties --}}
        <div class="form-group-stacked item-properties">
          <label class="checkbox">
            <input type="checkbox" checked disabled/>
            {{localize "DGYZE.ItemPropNames.disposable"}}
          </label>
        </div>

      </div>

      {{!-- Inventory Options --}}
      {{#if inActor}}
      <div class="features-other flexcol">
        <div class="form-group">
          <label class="checkbox">
            <input type="checkbox" name="system.equipped" {{checked system.equipped}}/>
            {{localize "DGYZE.ItemSheet.Equipped"}}
          </label>
        </div>
        <div class="form-group">
          <label class="checkbox">
            <input type="checkbox" name="system.backpack" {{checked system.backpack}}/>
            {{localize "DGYZE.ItemSheet.StoredInBackpack"}}
          </label>
        </div>
      </div>
      {{/if}}

    </div>

    {{!-- Description Tab --}}
    <div class="tab tab-description" data-group="primary" data-tab="description">
      {{> "systems/dgyze/templates/item/parts/item-description.hbs"}}
    </div>

  </section>

</form>
