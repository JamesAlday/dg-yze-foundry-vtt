<form class="{{cssClass}} flexcol" autocomplete="off">
    {{!-- Item Sheet Header --}}
    {{> "systems/dgyze/templates/item/parts/item-header.hbs"}}
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs slanted-tabs flexrow flex-center" data-group="primary">
        <a class="item" data-tab="motivation">{{localize "DGYZE.ItemSheet.MotivationTab"}}</a>
    </nav>
    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Motivation Tab --}}
        <div class="tab tab-motivation" data-group="primary" data-tab="motivation">
            <div class="grid grid-2col item-motivation">
                <div class="flexcol">
                    <h2>{{localize "DGYZE.ItemSheet.Disorder"}}</h2>
                    <input type="text" name="system.disorder" placeholder="None" value="{{system.disorder}}"/>
                </div>
                <div class="flexcol">
                    <h2>{{localize "DGYZE.ItemSheet.DisorderCured"}}</h2>
                    <input type="checkbox" name="system.cured" {{checked system.cured}}/>    
                </div>
            </div>
        </div>
        <div class="item-description item-motivation">
            <div class="flexcol">
                <h2>{{localize "DGYZE.ItemSheet.Description"}}</h2>
                {{> "systems/dgyze/templates/item/parts/item-description.hbs"}}
            </div>
        </div>
    </section>
</form>
