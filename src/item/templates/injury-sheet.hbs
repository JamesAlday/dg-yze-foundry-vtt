<form class="{{cssClass}} flexcol" autocomplete="off">

  {{!-- Item Sheet Header --}}
  {{> "systems/dgyze/templates/item/parts/item-header.hbs"}}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs slanted-tabs flexrow flex-center" data-group="primary">
    <a class="item" data-tab="features">{{localize "DGYZE.ItemSheet.FeaturesTab"}}</a>
    <a class="item" data-tab="modifiers">{{localize "DGYZE.ItemSheet.ModifiersTab"}}</a>
    {{!-- <a class="item" data-tab="description">{{localize "DGYZE.ItemSheet.DescriptionTab"}}</a> --}}
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Features Tab --}}
    <div class="tab tab-features" data-group="primary" data-tab="features">
      <div class="grid grid-3col item-features">
        <div class="flexcol">
          <label>{{localize "DGYZE.InjurySheet.Category"}}</label>
          <select name="system.category">
            {{selectOptions config.injuryCategories selected=system.category localize=true}}
          </select>
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.InjurySheet.Location"}}</label>
          <select name="system.location">
            {{selectOptions config.hitLocations selected=system.location localize=true}}
          </select>
        </div>
        <div class="flexcol">
          <label>{{localize "DGYZE.InjurySheet.HealTime"}}</label>
          <input type="text" name="system.healTime" value="{{system.healTime}}"/>
        </div>
      </div>

      {{!-- Other Parameters --}}
      <div class="features-other flexcol">
        <div class="flexrow">
          {{!-- <textarea name="system.description" rows="2" placeholder="{{localize "DGYZE.InjurySheet.Effect"}}">{{system.description}}</textarea> --}}
          <input type="text" name="system.description" value="{{system.description}}" placeholder="{{localize "DGYZE.InjurySheet.Effect"}}"/>
        </div>
      {{!-- </div> --}}
      {{!-- <div class="features-other flexcol"> --}}
        <div class="form-group-stacked item-properties">
          <label class="checkbox">
            <input type="checkbox" name="system.lethal" {{checked system.lethal}}/>
            {{localize "DGYZE.InjurySheet.Lethal"}}
          </label>
        </div>
        {{#if system.lethal}}
        <div class="flexrow">
          <input type="text" name="system.timeLimit" value="{{system.timeLimit}}" placeholder="{{localize "DGYZE.InjurySheet.TimeLimit"}}"/>
        </div>
        {{/if}}
      </div>
    </div>

    {{!-- Modifiers Tab --}}
    <div class="tab tab-modifiers" data-group="primary" data-tab="modifiers">
      {{> "systems/dgyze/templates/item/parts/item-modifiers.hbs"}}
    </div>

    {{!-- Description Tab --}}
    {{!-- <div class="tab tab-description" data-group="primary" data-tab="description">
      {{> "systems/dgyze/templates/item/parts/item-description.hbs"}}
    </div> --}}

  </section>

</form>
